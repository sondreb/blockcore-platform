{
  "Logging": {
    "File": {
      "IncludeScopes": true,
      "BasePath": "logs",
      "LogLevel": {
        "Default": "Trace"
      },
      "FileEncodingName": "utf-8",
      "DateFormat": "yyyyMMdd",
      "CounterFormat": "000",
      "MaxFileSize": 10485760,
      "MaxQueueSize": 100,
      "Files": [
        { "Path": "hub-debug.log" },
        { "Path": "hub-debug-<counter>.log" },
        {
          "Path": "<date:yyyy>/<date:MM>/hub-debug-<counter>.log",
          "CounterFormat": "00"
        },
        {
          "Path": "hub-warn+err-<counter>.log",
          "MinLevel": {
            "Default": "Warning"
          },
          "CounterFormat": "00"
        }
      ]
    },
    "ErrorFile": {
      "IncludeScopes": true,
      "BasePath": "logs",
      "LogLevel": {
        "Default": "Warning"
      },
      "Files": [
        { "Path": "hub-warn+err.log" }
      ]
    }
  },
  "LogLevel": {
    "Default": "Information"
  }
}